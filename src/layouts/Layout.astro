---
import '../styles/global.css';

interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="es">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="La Pluma de Oro - Editorial">
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body class="min-h-screen bg-neutral-50">
		<header class="bg-neutral-900 text-white p-4">
			<nav class="container mx-auto flex justify-between items-center">
				<div class="flex items-center">
					<img src="/img/Logo.jpg" alt="Logo La Pluma de Oro" class="h-16 w-auto">
				</div>
				<ul class="flex space-x-8">
					<li><a href="/" class="hover:text-yellow-500 transition-colors">Inicio</a></li>
					<li><a href="/catalogo" class="hover:text-yellow-500 transition-colors">Cat√°logo</a></li>
					<li><a href="/autores" class="hover:text-yellow-500 transition-colors">Autores</a></li>
					<li><a href="/blog" class="hover:text-yellow-500 transition-colors">Blog</a></li>
					<li><a href="/contacto" class="hover:text-yellow-500 transition-colors">Contacto</a></li>
				</ul>
			</nav>
		</header>
		<main>
			<slot />
		</main>
		<footer class="bg-neutral-900 text-white p-6 mt-8">
			<div class="container mx-auto text-center">
				<p class="text-neutral-400">&copy; {new Date().getFullYear()} La Pluma de Oro. Todos los derechos reservados.</p>
			</div>
		</footer>
	</body>
</html>
