---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Contacto - La Pluma de Oro">
	<div class="container mx-auto py-12 px-4">
		<h1 class="text-4xl font-bold text-amber-900 mb-8">Contacto</h1>
		<div class="max-w-2xl mx-auto">
			<form class="space-y-6">
				<div>
					<label for="nombre" class="block text-amber-900 font-medium mb-2">Nombre</label>
					<input type="text" id="nombre" name="nombre" class="w-full p-2 border border-amber-300 rounded focus:outline-none focus:ring-2 focus:ring-amber-500">
				</div>
				<div>
					<label for="email" class="block text-amber-900 font-medium mb-2">Email</label>
					<input type="email" id="email" name="email" class="w-full p-2 border border-amber-300 rounded focus:outline-none focus:ring-2 focus:ring-amber-500">
				</div>
				<div>
					<label for="mensaje" class="block text-amber-900 font-medium mb-2">Mensaje</label>
					<textarea id="mensaje" name="mensaje" rows="6" class="w-full p-2 border border-amber-300 rounded focus:outline-none focus:ring-2 focus:ring-amber-500"></textarea>
				</div>
				<button type="submit" class="w-full bg-amber-800 text-white py-3 px-6 rounded-lg hover:bg-amber-700 transition-colors">
					Enviar Mensaje
				</button>
			</form>
		</div>
	</div>
</Layout>
